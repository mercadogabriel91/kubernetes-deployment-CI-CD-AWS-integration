apiVersion: v1
kind: Secret
metadata:
  name: aws-credentials
  namespace: k-challenge-namespace
type: Opaque
stringData:
  AWS_ACCESS_KEY_ID: "your-aws-access-key-id"
  AWS_SECRET_ACCESS_KEY: "your-aws-secret-access-key"
  AWS_DEFAULT_REGION: "us-east-1"

---
# Instructions:
# 1. Copy this file to aws-credentials-secret.yaml (gitignored)
# 2. Fill in your actual AWS credentials
# 3. Apply: kubectl apply -f aws-credentials-secret.yaml
#
# For production/EKS, use IRSA (IAM Roles for Service Accounts) instead
# See service-account.yaml for IRSA annotation

